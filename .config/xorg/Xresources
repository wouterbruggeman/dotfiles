*.background:   #181818
*.cursorColor:  #f5f5f5

! black
*.color0:       #222222
*.color8:       #6d6d6d

! red
*.color1:       #a61111
*.color9:       #a62121

! green
*.color2:       #899413
*.color10:      #899422

! yellow
*.color3:       #de741d
*.color11:      #de722f

! blue
