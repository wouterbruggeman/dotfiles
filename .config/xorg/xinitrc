#Start xautolock
xautolock -locker ~/.scripts/lock.sh -time 10 -detectsleep &

#Enable numlock
numlockx &

#Remove the cursor when not in use
exec unclutter -b &

#Setup XRDB
xrdb $XDG_CONFIG_HOME/xorg/Xresources

#Show a background
exec ~/.scripts/background.sh &

#Start compton
compton -c -C -b

#Show polybar
exec polybar main &

#Start i3
exec i3
