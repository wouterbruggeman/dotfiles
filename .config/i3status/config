# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

# INSERT icons:
# insert mode -> CTRL+v -> uf(code)

general {
        colors = true
        color_good = '#00b300'
        color_degraded = '#c6ba26'
        color_bad = '#ff4d4d'
        interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "%quality at %essid #%ip"
        format_down = "No connection"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " #%ip (%speed)"
        format_down = " down"
}

cpu_usage {
	format = " %usage"
}

battery all {
	format_down = "No battery"
	status_chr = ""
	status_bat = ""
	status_unk = ""
	status_full = ""
        format = "%status %percentage"
	low_threshold = 25
}

tztime local {
        format = " %d-%m-%Y %H:%M:%S"
}

volume master {
	format = " %volume"
	format_muted = ""
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
